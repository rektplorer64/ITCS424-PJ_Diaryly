<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.LocationActivity" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/map"
        app:layout_anchorGravity="top|start"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        app:tint="@color/blackAlpha60"
        app:backgroundTint="@android:color/white"
        android:layout_marginStart="@dimen/margin_large_24"
        android:layout_marginTop="@dimen/margin_large_24"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/locationConfirmBtn"
        app:layout_anchor="@id/map"
        app:layout_anchorGravity="end|bottom"
        android:layout_marginBottom="@dimen/margin_large_24"
        android:layout_marginEnd="@dimen/margin_large_24"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_selection"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimaryDark"
        app:icon="@drawable/ic_check_white_24dp"
        app:iconTint="@android:color/white" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>